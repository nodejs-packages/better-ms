{
  "name": "better-ms",
  "version": "1.1.2",
  "description": "Tiny millisecond conversion utility",
  "main": "./index",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodejs-packages/better-ms.git"
  },
  "files": [
    "Duration.js",
    "index.js",
    "ms.js",
    "parse-ms.js",
    "pretty-ms.js",
    "Timestamp.js"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint lib/* bin/*"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "4.18.2",
    "expect.js": "0.3.1",
    "husky": "0.14.3",
    "lint-staged": "5.0.0",
    "mocha": "4.0.1"
  }
}
